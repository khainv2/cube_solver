        android:layout_weight="2" />

    <!-- Media Controls -->
    <com.khainv9.kubesolver.ui.MediaControlView
        android:id="@+id/media_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
